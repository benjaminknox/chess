{
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@typegoose/typegoose": "^9.2.0",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa__cors": "^3.0.3",
    "axios": "^0.23.0",
    "dotenv": "^10.0.0",
    "koa": "^2.13.3",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "koa-websocket": "^6.0.0",
    "mongoose": "^6.0.13",
    "redis": "^4.0.1",
    "typegoose": "^5.9.1",
    "uuidv4": "^6.2.12"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^3.0.8",
    "@types/jest": "^27.0.2",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "jest": "^27.2.5",
    "mongodb-memory-server": "^8.1.0",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.12.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/src/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/src/testUtils/setupFiles.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/testUtils/setupFilesAfterEnv.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/coverage/"
    ]
  },
  "scripts": {
    "test": "yarn jest --runInBand --detectOpenHandles",
    "start": "yarn watch-server",
    "build-server": "tslint --project . && tsc",
    "watch-server": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/server.ts"
  }
}
